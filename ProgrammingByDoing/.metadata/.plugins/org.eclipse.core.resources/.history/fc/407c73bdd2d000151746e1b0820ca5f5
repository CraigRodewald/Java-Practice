import java.util.Scanner;

public class ScannerPractice 
{
	
	public static String getInput()
	{
		//Initialize variables
		String userText;
		
		// Instantiate the Scanner method
		Scanner userInput = new Scanner(System.in);
		
		System.out.print("Enter some kind of text or 'Q' to quit: ");
		userText = userInput.nextLine();
		
		userInput.close();
		return userText;
	}

	public static void main(String[] args)
	{
		//Initialize variables
		String textFromUser = "";
		
		//Call the getInput function to get info from the user
		while (textFromUser.toUpperCase() != "Q")
		{
			textFromUser = getInput();
			
			if (textFromUser.toUpperCase() != "Q")
			{
				System.out.println("Goodbye");
			}
			else
			{
			System.out.println(textFromUser);
			}
		}
	}

}
