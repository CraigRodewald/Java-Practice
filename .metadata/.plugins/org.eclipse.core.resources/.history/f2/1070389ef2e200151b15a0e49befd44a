import javax.swing.JOptionPane;
import javax.swing.JTextField;

public class CheckLoginInformation {
	// Initialize variable
	static int loginAttempt = 3;
	
	//Checks user input against the name stored as Admin 
	public static Boolean checkUsername(JTextField txtUsername){
		//String username = txtUsername.getText();
		//System.out.println(username);
		return (txtUsername.equals("Admin"));
	}
	
	// Checks user input against the password
	public static Boolean checkPassowd(JTextField txtPassword){
		//String password = txtPassword.getText();
		//System.out.println(password);
		return txtPassword.equals("password");
	}
	
	static void loginAttempts(JTextField txtUsername, JTextField txtPassword){
		while (loginAttempt != 0) {
			String username = txtUsername.getText();
			String password = txtPassword.getText();
			
			Boolean loginUser = checkUsername(txtUsername);
			Boolean loginPass = checkPassowd(txtPassword);
			
			JOptionPane.showMessageDialog(null, loginUser);
			JOptionPane.showMessageDialog(null, loginPass);
		}
	}

}
